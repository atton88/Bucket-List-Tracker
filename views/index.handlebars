  <nav class="uk-navbar-container uk-dark " uk-navbar>
    <div class="uk-grid uk-align-center uk-muted" ukgrid>
    <h2 class="uk-text-center uk-width-1-1">Bucket List Tracker!</h2>
    </div>
  </nav>

<div class="uk-container uk-container-center uk-text-center uk-margin-top">
  <div class="uk-grid">
    <div class="uk-width-1-3">
      <div class="uk-card uk-card-small uk-card-secondary uk-card-hover uk-card-body">
      <h3 class="uk-card-title">To-do: </h3> 
      <hr>
        {{#each list}}
          {{#unless completed}}
            {{> lists/list-block completed=true}}
          {{/unless}}
        {{/each}}
      </div>
    </div>


    <div class="uk-width-1-3">
      <div>
        <h2 class="">Add a bucket list item</h2>
      </div>
        <form id="createForm">
          <div class="uk-inline">
            <a class="uk-form-icon" href="#" uk-icon="icon: pencil"></a>
            <input class="uk-input" type="text" id="newText" name="name">
          </div>
          <button type="submit" class="uk-button uk-button-secondary">Add Item</button>
        </form>
    </div>

    <div class="uk-width-1-3">
      {{#each list}}
        {{#if completed}}
          {{> lists/list-block completed=false}}
        {{/if}}
      {{/each}}
    </div>

  </div>
</div>